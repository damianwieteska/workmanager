= render 'layouts/error_messages', object: @user

.field.form-group
  = f.text_field :email, placeholder: :email, class: 'form-control'
.field.form-group
  = f.text_field :first_name, placeholder: :first_name, class: 'form-control'
.field.form-group
  = f.text_field :last_name, placeholder: :last_name, class: 'form-control'
.field.form-group
  = f.text_field :country, placeholder: :country, class: 'form-control'
.field.form-group
  = f.text_field :city, placeholder: :city, class: 'form-control'
.field.form-group
  = f.text_field :phone, placeholder: :phone, class: 'form-control'
.field.form-group
  = f.text_field :facebook_url, placeholder: :facebook_url, class: 'form-control'
.field.form-group
  = f.text_field :linkedin_url, placeholder: :linkedin_url, class: 'form-control'
.field.form-group
  .row
    .col-2
      = f.label :birthdate
    .col-10
      = f.text_field :birthdate, class: 'form-control form-datepicker'
.field.form-group
  = f.text_field :birth_country, placeholder: :birth_country, class: 'form-control'
.field.form-group
  .row
    .col-2
      %label Skills:
    .col-10.checkbox-list
      = f.collection_check_boxes(:skill_ids, Skill.all, :id, :name, class: 'form_control')
.actions
  = link_to users_path do
    %button.btn.btn-lg.btn-outline-dark
      Back
  = f.submit 'Save', class: 'btn btn-lg btn-dark'
