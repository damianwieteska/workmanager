%h1 Listing tasks

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Start time
      %th Deadline
      %th Priority
      %th List
      %th Done
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.description
        %td= task.start_time
        %td= task.deadline
        %td= task.priority
        %td= task.list
        %td= task.done
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Task', new_task_path
